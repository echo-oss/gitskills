.left {
  background-color: white;
  width: 750rpx;
  display: flex;
  flex-direction: row;
  padding:  20rpx; 
  box-sizing: border-box;
}
.right {
  height: 200rpx;
  display: flex;
  direction: row;
  text-align: center;
  vertical-align: middle;
  justify-content: space-around;
  line-height: 200rpx;
  background: rgba(54, 131, 214, 1);
  color: #fff;
  font-size: 28rpx;
}
.round{
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding-right:  20rpx;
}

.img{
  width: 160rpx;
  height: 160rpx;
}
.right-container{
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  flex: 1;
}
.counter-container{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}


.l-right-class{
  display: flex;
  flex-direction: row;
  /* justify-content: space-between; */
  align-items: center;
}
.tapbar{
    position:fixed;
    bottom:0;
    background-color: #ffffff;
}
.submit-container{
    width: 750rpx;
    height: 100rpx;
    display: flex;
    flex-direction: row;
    flex: 1;
    justify-content: space-between;
    align-items: center;
    padding: 10rpx;
}
.button{
  margin: 0px 10rpx;
}
.row {
  height: 1px;
  width: 750rpx;
  background: rgba(243, 243, 243, 1);
}

