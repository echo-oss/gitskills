<!--pages/navigator/mall/index.wxml-->

<view class="container">
  <!-- 通告栏 -->
  <view>
    <l-notice-bar l-class="lssss" tyle="margin-bottom:20rpx" show="{{true}}" type="swip" swip-arr="{{arr}}" front-icon-name="notification">
    </l-notice-bar>
  </view>

  <!-- 轮播图   -->
  <swiper class="swiper" indicator-dots indicator-active-color="#157658" autoplay circular>
    <!--        循环遍历-->
    <block wx:for="{{bannerB.items}}" wx:key="index">
      <swiper-item>
        <!--                遍历的默认变量名称是item-->
        <image class="swiper" src="{{item.img}}"></image>
      </swiper-item>
    </block>
  </swiper>




  <!-- 分类六宫格 -->
  <view class='cu-list grid col-3 no-border inner-container'>
    <view class='cu-item ' style="height: 120rpx;" wx:for="{{grid}}" wx:key="index" data-navigateMark="{{item.navigateMark}}" bindtap='onNaviCard'>
      <view class='{{item.icon}} {{item.color}} text-shadow'>
        <image class="img" src="{{item.img}}"></image>
      </view>
      <text>{{item.title}}</text>
    </view>
  </view>

  <!-- 分页 -->
  <scroll-view scroll-x class="bg-white nav text-center margin-top">
    <view class="cu-item {{0==TabCur?'text-gray cur':''}}" bindtap="tabSelect" data-id="0">
      企业宣传
    </view>
    <view class="cu-item {{1==TabCur?'text-gray cur':''}}" bindtap="tabSelect" data-id="1">
      案例展示
    </view>
    <view class="cu-item {{2==TabCur?'text-gray cur':''}}" bindtap="tabSelect" data-id="2">
      精英人才
    </view>
  </scroll-view>

<view class="cu-card article {{isCard?'no-card':'no-card'}}" wx:if="{{0==TabCur}}">
  <view class="cu-item shadow" bindtap="onCardItem">
    <view class="title">
      <view class="text-cut">标题。</view>
    </view>
    <view class="content">
      <image src="https://ossweb-img.qq.com/images/lol/web201310/skin/big10006.jpg" mode="aspectFill"></image>
      <view class="desc">
        <view class="text-content"> 如果不是为了飞翔，。我要这翅膀有何用</view>
        <view>
          <view class="cu-tag bg-red light sm round">阅读999</view>
          <view class="cu-tag bg-green light sm round">评论 99</view>
        </view>
      </view>
    </view>
  </view>
</view>


</view>