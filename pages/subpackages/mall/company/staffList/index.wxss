.shop-card-container {
  width: 100%;
  box-sizing: border-box;
  background-color: #fff;
  padding: 34rpx 30rpx 26rpx 30rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  border-bottom: 20rpx solid #f7f7f7;
}

.left {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.title-container {
  display: flex;
  flex: row;
  align-items: center;
}

.title {
  margin-right: 10px;
  font-weight: bold;
  font-size: 40rpx;
}

.subtitle {
  color: #999;
  font-size: 28rpx;
  font-weight: 400;
  margin-top: 40rpx;
  margin-bottom: 16rpx;
}

.right {
  margin-left: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  width: 178rpx;
  height: 150rpx;
  /* border-left: 2px dashed #f5f5f5; */
}
