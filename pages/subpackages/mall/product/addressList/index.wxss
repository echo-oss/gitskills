/* pages/subpackages/mall/product/addressList/index.wxss *//* pages/myCenter/user-address/user-address.wxss */
page {
  background-color: #efeff4;
  font-size: 10pt;
  -webkit-user-select: none;
  user-select: none;
  width: 100%;
  overflow-x: hidden;
}
/* 画布 */
.address{
  display: flex;
  flex-wrap: wrap;
  margin-top: 1px;

}
/* 信息列表 */
.address-detail {
  padding: 30rpx;
  margin: 10rpx 0rpx 0rpx 0rpx;
  width: 100%;
   background-color: #fff;
}
.address-name{
  margin-bottom: 20rpx;
  font-size: 11pt;
  font-weight: 900;
}
.address-phone{
 margin-bottom: 30rpx;
}
/* 底部编辑区 */
.address-edit {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  border-top: 1px #efeff4 solid;
  padding-top: 30rpx;
}
.address-default{
  border: 1px red solid;
  padding: 6rpx 20rpx ;
}

/* 新增 */
.history-container{
    display:flex;
    flex-direction:column;
    background-color: white;
}

.history-title{
    display:flex;
    flex-direction:row;
    align-items: center;
    margin-top:38rpx;
}

.slide{
    width:8rpx;
    height: 46rpx;
    background-color: #157658;
    margin-right: 22rpx;
}
.icon{
    padding: 30rpx;
}
.history-title > text{
    font-size:28rpx;
    color: #333333;
}