} */

.explain{
    margin-top:10rpx;
    background-color: #ffffff;
    padding-bottom: 20rpx;
    padding-top:20rpx;
    display:flex;
    flex-direction:row;
    align-items:center;
    justify-content:center;
}

.tapbar {
    background-color: white;
    position: fixed;
    bottom: 0;
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
}
.submit-container{
    height: 100rpx;
    display: flex;
    flex-direction: row;  
    justify-content: center;
    align-items: center;
    
}
.button {
    margin: 0px 10px;
}