/* components/spu-preview/index.wxss */

.container {
  width: 340rpx;
  display: flex;
  flex-direction: column;
  box-shadow: 0px 0px 8px 0px rgba(119, 163, 149, 0.2);
  margin-bottom: 30rpx;
  background-color: #fff;
  border-radius: 20rpx;
}
.container image{
   border-radius: 20rpx;
}
.content-container {
  /* display: flex;
  flex-direction: column; */
  padding: 16rpx;
}

.title{
    font-size: 28rpx;
    color: #333333;
    
}
.price-row{
    display:flex;
    flex-direction:row;
}
.discount-price {
  margin-left: 20rpx;
}

.subtitle{
    font-size: 24rpx;
    font-weight: 300;
    margin-top: 6rpx;
    color: #888;
    word-break:break-all;/* 小程序view英文数字不换行的问题 */
}
.price-value {
    font-size: 26rpx !important;/*加!important ，是因为优先级具有不确定性*/
    color: #157658 !important;
}

