<!--components/spu-scroll/index.wxml-->
<view class="container">
  <image class="title" src="{{theme.title_img}}" mode="widthFix"></image>
  <scroll-view scroll-x class="scroll-view">
    <view class="inner">
      <block wx:for="{{spuList}}" wx:key="index">
        <view class="spu-container">
          <image class="spu-img" src="{{item.img}}"></image>
          <text class="spu-text">{{item.title}}</text>
          <text class="my-class price-value">80.00</text>
        </view>
      </block>


    </view>

  </scroll-view>

</view>